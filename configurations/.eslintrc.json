{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true,
        "node": true,
        "jest/globals": true
    },
    "parser": "babel-eslint",
    "plugins": [
        "import",
        "mocha",
        "promise",
        "react",
        "jest"
    ],
    "extends": [
        "plugin:react/recommended",
        "./eslint-rules/es5.js",
        "./eslint-rules/es6.js",
        "./eslint-rules/import.js",
        "./eslint-rules/mocha.js",
        "./eslint-rules/promise.js",
        "./eslint-rules/jest.js"
    ],
    "rules": {
        "semi": "error",
        "mocha/no-mocha-arrows": 0
    }
}
